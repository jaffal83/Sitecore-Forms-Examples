@using Sitecore.Mvc
@if (Request.IsAuthenticated)
{
    var fullname = "Hello " + Sitecore.Context.User.Profile.FullName + "!";
<div class="collapse navbar-collapse justify-content-end" id="navbarNav">
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" href="UserProfile">@fullname</a>
        </li>
        <li class="nav-item">
            @Html.Sitecore().Placeholder("logout")
        </li>
    </ul>
</div>
}
else
{
    <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="Login">Login</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#" data-toggle="modal" data-target="#exampleModal">Register</a>
            </li>
        </ul>
    </div>
}
